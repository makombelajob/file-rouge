{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/login.js') }}" defer></script>
{% endblock %}

{% block body %}
    <form method="post" class="alert alert-info">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="text-center fs-1 text-uppercase my-3">Connexion</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
               autocomplete="email" required autofocus placeholder="Adresse e-mail">
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
               required placeholder="Mot de passe">
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
               value="{{ csrf_token('authenticate') }}">

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <input type="checkbox" name="_remember_me" id="_remember_me">
            <label for="_remember_me">Se souvenir de moi</label>
        </div>
        #}

        <div class="text-center my-3">
            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </div>

        <div class="text-center my-3">
            <p>Mot de passe oublié ?</p>
            <a href="{{ path('app_reset_password') }}" class="btn btn-secondary fs-4">
                Réinitialiser
            </a>
        </div>
    </form>
{% endblock %}